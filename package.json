{
	"name": "kotlindebug",
	"displayName": "Kotlin Debugging",
	"version": "0.0.1",
	"description": "Debugging for Kotlin on JVM",
	"main": "./out/extension",
	"files": [
		"build/install/**"
	],
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"watch": "tsc -w",
		"compile": "tsc"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fwcd/KotlinDebugAdapter"
	},
	"keywords": [
		"kotlin",
		"debugger"
	],
	"categories": [
		"Debuggers"
	],
	"icon": "Icon128.png",
	"author": "fwcd",
	"publisher": "fwcd",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/fwcd/KotlinDebugAdapter/issues"
	},
	"homepage": "https://github.com/fwcd/KotlinDebugAdapter#readme",
	"dependencies": {
		"vscode-debugadapter": "^1.31.0",
		"vscode-debugprotocol": "^1.31.0"
	},
	"engines": {
		"vscode": "^1.21.0"
	},
	"devDependencies": {
		"@types/node": "^10.7.0",
		"typescript": "^3.0.1",
		"vsce": "^1.46.0",
		"vscode": "^1.1.21"
	},
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "kotlin"
			}
		],
		"debuggers": [
			{
				"type": "kotlin",
				"label": "Kotlin",
				"adapterExecutableCommand": "extension.kotlindebug.adapterexecutablepath",
				"configurationAttributes": {
					"launch": {
						"required": [
							"jarPath",
							"mainClass"
						],
						"properties": {
							"jarPath": {
								"type": "string",
								"description": "Absolute path to your Kotlin JAR",
								"default": "${workspaceFolder}/YOUR_JAR_FILE.jar"
							},
							"mainClass": {
								"type": "string",
								"description": "The full name of your main class (usually your filename in PascalCase postfixed with Kt)",
								"default": "YourMainClassKt"
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "kotlin",
						"request": "launch",
						"name": "Kotlin Launch",
						"jarPath": "${workspaceFolder}/YOUR_JAR_FILE.jar",
						"mainClass": "YourMainClassKt"
					}
				],
				"configurationSnippets": [
					{
						"label": "Kotlin: Launch JAR",
						"description": "A new Kotlin JAR launch configuration",
						"body": {
							"type": "kotlin",
							"request": "launch",
							"name": "Kotlin Launch",
							"jarPath": "^\"\\${workspaceFolder}/YOUR_JAR_FILE.jar\"",
							"mainClass": "YourMainClassKt"
						}
					}
				]
			}
		]
	}
}
