{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"
			],
			"outFiles": [
				"${workspaceFolder}/editors/vscode/out/**/*.js"
			]
		},
		{
			"type": "java",
			"name": "Java Debug (Attach)",
			"request": "attach",
			"hostName": "localhost",
			"port": 5005
		},
		{
			"type": "kotlin",
			"request": "launch",
			"name": "Debug KotlinDebugAdapter",
			"projectRoot": "${workspaceFolder}/adapter",
			"mainClass": "fwcd.ktda.KDAMainKt"
		}
	]
}
